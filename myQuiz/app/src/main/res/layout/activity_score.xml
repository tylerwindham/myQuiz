<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myquiz.tylerwindham.myquiz.QuestiongraphActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/scoreLabel"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/numericScore"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scoreLabel"
        android:layout_centerHorizontal="true" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/questionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question"
        android:id="@+id/questionLabel"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/numericScore"
        android:layout_centerHorizontal="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/nextButton"
        fancy:fb_text="Next"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_defaultColor="#6ea6ff"
        fancy:fb_borderWidth="1dp"
        fancy:fb_radius="25dp"
        android:background="#6ea6ff"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/chart"
        android:layout_toRightOf="@+id/questionLabel"
        android:layout_alignRight="@+id/chart"
        android:layout_alignEnd="@+id/chart" />



</RelativeLayout>
