<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/home"
    android:background="#ffff"
    tools:context="com.myquiz.tylerwindham.myquiz.HomeActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Take Quiz"
        android:id="@+id/takeQuizButton"
        fancy:fb_text="Take Quiz"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_defaultColor="#6ea6ff"
        fancy:fb_borderWidth="1dp"
        fancy:fb_radius="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="196dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#6ea6ff"
        android:textColor="#ffffff" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/pastQuizzesButton"
        android:layout_marginTop="97dp"
        fancy:fb_text="Past Quizzes"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_defaultColor="#6ea6ff"
        fancy:fb_borderWidth="1dp"
        fancy:fb_radius="30dp"
        android:background="#6ea6ff"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/takeQuizButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/my_quiz_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/takeQuizButton"
        android:nestedScrollingEnabled="true"
        android:baselineAlignBottom="false"
        android:paddingBottom="50dp"
        android:paddingTop="30dp" />
</RelativeLayout>
